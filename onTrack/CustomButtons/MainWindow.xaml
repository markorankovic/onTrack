<Window x:Class="CustomButtons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomButtons" 
        xmlns:controls="clr-namespace:CustomButtons.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="controls:CustomButton" x:Key="ButtonStyle">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="controls:CustomButton">
                            <Border>
                                <Grid Width="100" Height="100" Background="Gray">
                                    <TextBlock x:Name="text" HorizontalAlignment="Center" VerticalAlignment="Center">Button</TextBlock>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <controls:CustomButton x:Name="button" Content="Edited!" Click="button_Click" Style="{StaticResource ButtonStyle}" />
    </Grid>
</Window>
